<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/leaguesFragment">

    <fragment
        android:id="@+id/leaguesFragment"
        android:name="com.imb.sportapp.ui.fragments.LeaguesFragment"
        android:label="LeaguesFragment"
        tools:layout="@layout/fragment_leagues">
        <action
            android:id="@+id/action_leaguesFragment_to_teamsFragment"
            app:destination="@id/teamsFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
        <action
            android:id="@+id/action_leaguesFragment_to_teamHomeFragment"
            app:destination="@id/teamHomeFragment"
            app:popUpTo="@+id/nav_graph"
            app:launchSingleTop="true"
            app:popUpToInclusive="true"/>
    </fragment>
    <fragment
        android:id="@+id/teamsFragment"
        android:name="com.imb.sportapp.ui.fragments.TeamsFragment"
        android:label="TeamsFragment"
        tools:layout="@layout/fragment_teams">
        <action
            android:id="@+id/action_teamsFragment_to_teamHomeFragment"
            app:destination="@id/teamHomeFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:popUpTo="@+id/nav_graph"
            app:launchSingleTop="true"
            app:popUpToInclusive="true"/>
    </fragment>
    <fragment
        android:id="@+id/teamHomeFragment"
        android:name="com.imb.sportapp.ui.fragments.TeamHomeFragment"
        android:label="TeamHomeFragment"
        tools:layout="@layout/fragment_team_home">
        <action
            android:id="@+id/action_teamHomeFragment_to_leaguesFragment"
            app:destination="@id/leaguesFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:launchSingleTop="true"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:popUpTo="@+id/nav_graph"
            app:popUpToInclusive="true" />
    </fragment>
</navigation>